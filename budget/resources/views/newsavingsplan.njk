{% extends 'parent' %}

{% block content %}

<h1> Új gyűjtés létrehozása </h1>

        <ul>
        {% for error in old('errors') %}
            <li>{{error.message}}</li>
        {% endfor %}
        </ul>

        <form class = "form-horizontal" method="POST">
            <fieldset>
                {{ csrfField }}
                 <div class="form-group">
                    <label name="name" for="name" class="col-lg-2 control-label">Név</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="name" name="name">
                    </div>
                </div>

                <div class="form-group">
                    <label name = "goal" for="goal" class="col-lg-2 control-label">Cél</label>
                    <div class="input-group col-lg-9">
                        <input type="number" class="form-control" name="goal" id="goal">
                        <span class="input-group-addon">Ft</span>
                    </div>
                </div>

                 <div class="form-group">
                    <label for="team" name="team" class="col-lg-2 control-label">Csapat</label>
                    <div class="col-lg-10">
                        <select class="form-control" id="team" name="team">
                            {% for team in teams | sort(false,true,'name') %}
                            <option value="{{team.id}}">{{team.name}}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Mehet</button>
                </div>
            </fieldset>
        </form> 
    </div>

{% endblock %}